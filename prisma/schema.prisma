generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(cuid())
  resumes Resume[]
}

model Resume {
  id         String       @id @default(cuid())
  title      String
  contacts   Contact[]
  experience Experience[]
  userId     String
  user       User         @relation(fields: [userId], references: [id])
}

model Contact {
  id        String @id @default(cuid())
  fullname  String
  email     String
  linkedin  String
  portfolio String
  phoneno   String
  country   String
  state     String
  cite      String
  resumeId  String
  resume    Resume @relation(fields: [resumeId], references: [id])
}

model Experience {
  id              String  @id
  role            String
  companyName     String
  workingDays     Int
  compunyLocation String
  descripation    String
  Resume          Resume? @relation(fields: [resumeId], references: [id])
  resumeId        String?
}
